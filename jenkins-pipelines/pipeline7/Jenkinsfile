try {
node {
    stage('Build') {
        try { 
    parallel testslave {
        node('testslave') {
		stage('SCM checkout testslave'){
            checkout scm }
            try {
		stage('Build testslave'){     
	           sh 'hostname'
	    catch (Exception exc) {
           	echo 'Something failed in testslave!'
		}	
            finally {
                sh 'whoami'
            		}
        	}

}
} 
    			},
    testslave2 {
        node('testslave2') {
		stage('SCM checkout testslave2'){
            checkout scm }
            try {
		stage('Build testslave2'){
                sh 'hostname'
                
            finally {
                sh 'whoami'
            }
}
        }
    }
        }
        catch (Exception exc) {
            echo 'Something failed, I should sound the klaxons!'
		            
        }
    }
}
}
}
} catch (Exception exc) {
            echo 'Something failed, I should sound the klaxons!'

} finally { echo 'last finaly statement'}
