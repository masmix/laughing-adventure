try {

node {
    stage('Build') {
        try { 
    parallel testslave: {
        node('testslave') {
            checkout scm
            try {
                sh 'hostname'
            }
            finally {
                sh 'whoami'
            }
        }
    },
    testslave2: {
        node('testslave2') {
            checkout scm
            try {
                sh 'hostname'
                }
            finally {
                sh 'whoami'
            }

        }
    }
  
		
        }
        catch (Exception exc) {
            echo 'Something failed, I should sound the klaxons!'
		            
        }
    }
}
} catch (Exception exc) {
            echo 'Something failed, I should sound the klaxons!'

} finally { echo 'last finaly statement'}
