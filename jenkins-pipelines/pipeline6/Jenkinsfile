}
      node('testslave2'){
          sh "hostname" }
   }
  }
  stage('Deploy') {
   parallel {
    stage('Dev') {
      steps {
      node('testslave') {
		sh "hostname"}
      node('testslave2'){
		sh "hostname" }
		 }
    }
    stage('QA') {
      steps {
      node('testslave') {
                sh "hostname"}
      node('testslave2'){
                sh "hostname" }
      
     }
    }
   }
  }
 }
}

